<%= form_with model: reward, url: admin_reward_path(reward), class:"text-center" do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="my-8">
    <%= f.label :image, "称号の画像", class: "block font-semibold mb-2 sm:text-lg" %>
    <%= f.file_field :image, class: "block input input-bordered mx-auto w-8/12 md:text-lg lg:w-1/2", placeholder: "ユーザー名"%>
    <%= f.hidden_field :image_cache %>
    <% if reward.image.url %>
      <%= image_tag reward.image.url, size: '100x100' %>
    <% end %> 
  </div>

  <div class="my-8">
    <%= f.label :name, "称号タイトル", class: "block font-semibold mb-2 sm:text-lg" %>
    <%= f.text_field :name, class: "block input input-bordered mx-auto w-8/12 md:text-lg lg:w-1/2", placeholder: "ユーザー名"%>
  </div>

  <div class=" my-8 ">
    <%= f.label :description, "条件の説明", class: "block font-semibold mb-2 sm:text-lg" %>
    <%= f.text_field :description, class:"block input input-bordered mx-auto w-8/12 md:text-lg lg:w-1/2" %>
  </div>

  <%= f.submit nil, class:"btn bg-gradient-to-tl from-cyan-300 to-cyan-100 mb-5 btn-md min-w-28 sm:text-lg sm:btn-lg sm:min-w-40 lg:min-w-60" %>
<% end %>