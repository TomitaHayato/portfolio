<h1 class="text-xl font-semibold mt-5 mb-15 text-center sm:text-3xl lg:text-4xl">ユーザー新規登録</h1>

<div class="text-center">
  <%= render "form", user:@user %>
  <%= link_to "キャンセル", my_pages_path, class: "btn bg-gradient-to-tl from-gray-400 to-gray-100 mx-auto mb-5 min-w-20 sm:text-lg sm:btn-lg sm:max-w-36" %>
  <div class="mb-5 flex justify-center">
    <%= link_to auth_at_provider_path(:provider => :line), class:"hover:opacity-90 active:opacity-70" do %>
      <%= image_tag 'line_login_btn.png'%>
    <% end %>
  </div>
  <%= link_to "ログインページへ", login_path, class: "link text-blue-600 mx-auto text-base sm:text-lg lg:text-xl block mb-5" %>
  <%= link_to "パスワードをお忘れの方はこちら", new_password_reset_path, class: "link text-blue-600 mx-auto text-base sm:text-lg lg:text-xl" %>
</div>
