<h1 class="text-xl font-semibold mt-5 mb-15 text-center sm:text-2xl">ユーザー新規登録</h1>

<div class="text-center">
  <%= render "form", user: @user %>

  <%= link_to "キャンセル", root_path,
      class: "btn-xl-custom btn-cancel-custom mb-5" %>

  <div class="mb-5 flex justify-center">
    <%= link_to auth_at_provider_path(:provider => :line), class:"hover:opacity-90 active:opacity-70", id: "line-login-btn" do %>
      <%= image_tag 'line_login_btn.png'%>
    <% end %>
  </div>

  <%= link_to "ログインページへ", login_path,
      class: "link-lg-custom mb-5" %>

  <%= link_to "パスワードをお忘れの方はこちら", new_password_reset_path,
      class: "link-lg-custom" %>
</div>
