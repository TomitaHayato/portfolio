<div class="card bg-base-100 image-full shadow-xl h-full" id="reward-description-<%= reward.id %>">
  <figure>
    <% if reward.image.url %>
      <%= image_tag reward.image.url, size: '200x200' %>
    <% end %> 
  </figure>
  <div class="card-body bg-gray-500/75 z-10 p-1 sm:p-2 lg:p-4">
    <h2 class="card-title">未開放:</h2>
    <h2 class="card-title"><%= reward.description %></h2>
  </div>
</div>