<div>
  <h3>パスワード再設定</h3>
  <%= form_with model: @user, url: password_reset_path(@token) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div>
     	<%= f.label :email %>
      <%= @user.email %>
    </div>
 
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit 'リセット' %>
  <% end %>
</div>