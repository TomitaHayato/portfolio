<div>
  <h1 class="text-xl font-semibold mt-5 mb-15 text-center sm:text-3xl lg:text-4xl">パスワードリセット申請</h1>
  <%= form_with url: password_resets_path, class:"text-center" do |f| %>
    <div class="">
      <div class="mx-auto my-8">
        <%= f.label :email, 'メールアドレスを入力してください。', class: "mb-1 lg:text-lg" %>
        <%= f.email_field :email, class: "block input input-bordered mx-auto w-8/12 md:text-lg lg:w-1/2" %>
      </div>
      <%= f.submit '申請', class: "btn bg-gradient-to-tl from-sky-600 to-sky-200 mb-5 btn-md min-w-20 sm:text-lg sm:btn-lg sm:min-w-32 lg:min-w-40 hover:opacity-80" %>
    </div>

  <% end %>
</div>