<div class="flex items-center">
  <!-- アイコン画像： クリックで拡大表示 -->
  <button onclick="document.getElementById('user-icon-<%=routine.id%>').showModal()">
    <div class="avatar">
      <div class="rounded-full size-[20px] sm:size-[25px] lg:size-[35px]">
        <%= image_tag routine.user.avatar.url %>
      </div>
    </div>
  </button>
  
  <!-- ユーザー名 -->
  <p class="text-[0.5rem] md:text-xs"><%= routine.user.name %></p>
</div>

<dialog id="user-icon-<%=routine.id%>" class="modal">
  <div class="modal-box flex justify-center">
    <%= image_tag routine.user.avatar.url, class: "size-8/12"%>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>